# Basic Settings

set hidden true
set ignorecase true
set icons true
set drawbox true
# set borderfmt "\003[44m"

# Functions

cmd mkdir ${{
	printf "Directory Name: "
	read ans
	mkdir $ans
}}

cmd mkfile ${{
	print "File Name: "
	read ans
	touch $ans
}}


# Key Bindings

map m
map d
map r rename
map R reload
map md mkdir
map mf mkfile
map dd delete
map x cut

# Movement
map gh cd ~
map gd cd ~/downloads
map gc cd ~/.config
map gf cd ~/dotfiles
map gr cd ~/github
